<!DOCTYPE html>
<html class="document">
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}Welcome!{% endblock %}</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			<link rel="stylesheet" type="text/css" href={{ asset("css/style.css") }}>
		{% endblock %}
		
		{% block javascripts %}
		{% endblock %}
	</head>
	<body>
		<ul class="navbar">
			<li id="index"><a href="{{ path('index_get') }}">Index</a></li>
			{% if is_granted('ROLE_USER') %}
				<!-- Utilisateur connecté -->
				
				<li id="modifier"><a href="update">Modifier profil</a></li>
				<li id="supprimer"><a href="delete">Supprimer profil</a></li>
				
				<li id="deconnexion">
					<form method="post" action="{{ path('deconnexion') }}">
						<button id="btnDeconnexion">Déconnexion</button>
					</form>
				</li>
			{% else %}
				<!-- Utilisateur non connecté -->
				
				<li id="inscription"><a href="inscription">Inscription</a></li>
				<li id="connexion"><a href="connexion">Connexion</a></li>
			{% endif %}
		</ul>
		
		<br />
		
		{% block body %}{% endblock %}
	</body>
</html>
